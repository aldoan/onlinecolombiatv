/*::::::::GENERAL SETTINGS::::::::::*/
body{
	color: #FFFFFF;
	background-color: #000000;
	font-size: 16px;
	font-family:'web_serveroffregular', 'helvetica';
	min-width: 320px;	
	line-height: 1;
}



:focus {
  outline: 0;
}
 
/* texto insertado/borrado */
ins { text-decoration: none; }
del { text-decoration: line-through; }
ul li, ol li{ list-style: none;} 
ul { line-height: 1.5;}

a {
	color: #FFFFFF;
    text-decoration: none;
    transition: all 0.3s linear 0s;
}



h1{
	font-size: 35px;
}

h1, h2, h3, h4{
	transition: all 0.3s linear 0s;
}

a:hover {
    color: #FFFFFF;
}

a:visited, a:hover, a:active {
    text-decoration: none;
}


